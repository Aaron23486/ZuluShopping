@model ZuluShooping.Models.ProvinceViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Provincia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProvince">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryId" />
            <partial name="_Province"/>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" style="margin-top: 8px;" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-danger" style="margin-top: 8px;">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
